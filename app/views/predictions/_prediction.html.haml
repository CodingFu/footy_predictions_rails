= form_for prediction do |f| 
  %tr
    = hidden_field_tag 'prediction[match_id]', prediction.match_id
    = hidden_field_tag 'prediction[user_id]',nil,:value => current_user.id
    %td= prediction.match.match_date_time.strftime("%a %e %b %H:%M")
    %td= prediction.match.home_team
    %td= f.text_field :home_prediction, size: 1, class: 'home_box'
    %td vs
    %td= f.text_field :away_prediction, size: 1, class: 'away_box'
    %td= prediction.match.away_team 
    %td= f.text_field :first_goalscorer, class: 'first_goal_box typeahead', autocomplete: "off", id: nil
    %td= f.submit
