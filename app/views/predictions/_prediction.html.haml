= form_for prediction do |f| 
  %tr
    = hidden_field_tag 'prediction[match_id]', prediction.match_id
    = hidden_field_tag 'prediction[user_id]',nil,:value => current_user.id
    %td= prediction.match.match_date_time.strftime("%a %e %b %H:%M")
    %td= prediction.match.home_team
    %td= f.text_field :home_prediction, size: 1, class: 'home_box'
    %td vs
    %td= f.text_field :away_prediction, size: 1, class: 'away_box'
    %td= prediction.match.away_team 
    %td= f.text_field :first_goalscorer, class: 'first_goal_box typeahead'
    %td= f.submit
    
    :javascript
      $('.typeahead').typeahead([
        {
          name: 'nba-teams',
          local: ['timtrueman', 'JakeHarding', 'vskarich'],
          prefetch: 'http://api.statsfc.com/top-scorers.json?key=iBmMBLP17gwhhpqtgZlM9Cf3MGIhijoQJ7Z9t0AT&competition=premier-league&year=2013/2014&team=newcastle-united',
          header: '<h3 class="league-name">Home Team</h3>'
        },
        {
          name: 'nhl-teams',
          prefetch: 'http://api.statsfc.com/top-scorers.json?key=iBmMBLP17gwhhpqtgZlM9Cf3MGIhijoQJ7Z9t0AT&competition=premier-league&year=2013/2014&team=liverpool',
          header: '<h3 class="league-name">Away Team</h3>'
        }
      ]);
    
    
    / %td Double?:
    / %td= radio_button_tag(:double, true)