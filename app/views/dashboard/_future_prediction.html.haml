- @predictions.future.each do |prediction|

  .prediction
    %table
      %tr
        %th Date
        %th Home
        %th 
        %th Away
        %th 
        %th First Goalscorer
        %th Points
        %th 
        %th Actual Results


      %tr
        %td
          = prediction.match.match_date_time.strftime("%a %e %b %H:%M")
        %td
          = prediction.match.home_team
        %td
          = prediction.home_prediction
        %td
          = prediction.match.away_team
        %td
          = prediction.away_prediction
        %td
          = prediction.first_goalscorer
        %td
          = prediction.match.
        %td
          2 
          / # = prediction.match.home_score
        %td
          2 
          / # = prediction.match.away_score